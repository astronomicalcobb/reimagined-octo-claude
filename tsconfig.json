{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@entities/*": ["entities/*"],
      "@systems/*": ["systems/*"],
      "@utils/*": ["utils/*"],
      "@physics/*": ["physics/*"],
      "@world/*": ["world/*"],
      "@ui/*": ["ui/*"],
      "@game-modes/*": ["game-modes/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
